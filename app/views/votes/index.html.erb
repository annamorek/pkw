<p id="notice"><%= notice %></p>

<h1>Listing Votes</h1>

<table>
  <thead>
    <tr>
      <th>Vote</th>
      <th>Valid vote</th>
      <th>Invalid vote</th>
      <th>Empty</th>
      <th>Other</th>
      <th>Card</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.vote %></td>
        <td><%= vote.valid_vote %></td>
        <td><%= vote.invalid_vote %></td>
        <td><%= vote.empty %></td>
        <td><%= vote.other %></td>
        <td><%= vote.card %></td>
        <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote', new_vote_path %>
