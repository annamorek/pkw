<p id="notice"><%= notice %></p>

<h1>Lista okręgów</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa województwa</th>
      <th>Nazwa okręgu</th>
      <th>Elektorat</th>
      <th>Liczba mandatów</th>

      <th>Wydane karty:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @districts.each do |district| %>
          <% # if district.vo == 1 %>
        <tr>
          <td><%= district.voivodeship.name %></td>
          <td><%= district.name %></td>
          <td><%= district.electorate %></td>
          <td><%= district.mandate %></td>
          <td><%= district.card %></td>
          <td><%= link_to 'Pokaż', district %></td>
          <td><%= link_to 'Edytuj', edit_district_path(district) if can? :update, @district %></td>
          <td><%= link_to 'Usuń', district, method: :delete, data: { confirm: 'Na pewno?' } if can? :destroy, District%></td>
        </tr>
           <% # end %>
    <% end %>
  </tbody>
</table>
