<p id="notice"><%= notice %></p>

<h1>Lista okręgów</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Elektorat</th>
      <th>Liczba mandatów</th>

      <th>Wydane karty:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
        <tr>
          <td><%= district.name %></td>
          <td><%= district.electorate %></td>
          <td><%= district.mandate %></td>

          <td><%= district.card %></td>
          <td><%= link_to 'Pokaż', district %></td>
          <td><%= link_to 'Edytuj', edit_district_path(district) %></td>
          <td><%= link_to 'Usuń', district, method: :delete, data: { confirm: 'Na pewno?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<h3><%= link_to 'Dodaj okręg', new_district_path %></h3>
